 *
 * BLOQUES
 * ================================================================
 * ripple..............Agrega el efecto de ripple al elemento
 *                     .check-[LETRA]__background con con el
 *                     data-atribute data-ripple="true".
 *
 * wrapper.............Contenedor de principal de los grupos checks.
 *
 * sections-title......Estilos de los títulos de los wrappers.
 */


/*------------------------------------*\
    RIPPLE
\*------------------------------------*/
 span[data-ripple="true"]::before
     background-color rgba(accent-color, .7) //variable en variables.styl
     border-radius 50%
     content ''
     display block
     height 100%
     opacity 0
     width 100%

 input[class^="custom-check__checkbox"]:checked + span[data-ripple="true"]::before
     animation ripple .35s ease .1s 1 normal forwards //Animación en el archivo keyframes.styl

/*------------------------------------*\
    WRAPPER
\*------------------------------------*/
.wrapper
    background white
    border-radius 0.125em //2px
    box-shadow z-depth-2 ///variable en variables.styl
    margin 4em auto
    padding .5em 0 1.5em 0
    text-align center
    width 740px

@media screen and (max-width 47.5em)
    .wrapper
        width 90%

/*------------------------------------*\
    SECTIONS-TITLE
\*------------------------------------*/
.sections-title
    border-bottom border-1 //variable en variables.styl
    color lighten(secondary-text-color, 10%) //var en variables.styl
    display block
    font-size 1.3rem
    font-weight 100
    line-height 1.3em
    margin .5em 3%
    padding .25em 1%
    text-align left
    width 92%
