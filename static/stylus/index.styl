@import 'normalize-v3.0.3-ROBOTO'
@import 'variables'
@import 'header'
@font-face {
	font-family: 'icomoon';
	src:url('../fonts/icomoon.eot?-77glzp');
	src:url('../fonts/icomoon.eot?#iefix-77glzp') format('embedded-opentype'),
		url('../fonts/icomoon.ttf?-77glzp') format('truetype'),
		url('../fonts/icomoon.woff?-77glzp') format('woff'),
		url('../fonts/icomoon.svg?-77glzp#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

//ESTILOS DE LOS CONTENEDORES GENERALES
.chrome
.all-navigators
	background lighten(divider-color, 80%)
	box-shadow z-depth-2
	margin 2em auto
	text-align center
	width 740px

@media screen and (max-width 760px)
	.chrome
	.all-navigators
		width 95%

//CONTENEDOR LISTA DE CHECKBOX
.list-of-checkbox
	background white
	border-radius .125em
	box-shadow z-depth-1 //Variable en shadows.styl
	display inline-block
	font-size 1.1rem //ESTE VALOR DEFINE EL TAMAÃ‘O DE LOS ELEMENTOS
	height auto
	list-style-type none
	margin .5em
	padding .25em
	text-align left
	width 8em //ESTE VALOR DEFINE EL ANCHO DE LOS ELEMENTOS INTERIORES

	&__item
		margin .25em 0
		padding .25em 4%
		width 92%

//PROPIEDADES DE LABELS Y CHECKBOX
.label
	color secondary-text-color //Variable en shadows.styl
	cursor pointer
	display block
	font-weight 400
	height 1.2em
	position relative
	width 100%

	&__check //DEFINE LAS PROPIEDADES DE POSICIONAMIENTO, ALTO Y ANCHO DE TODOS LOS CHECKBOX
		-moz-appearance none
		-ms-appearance none
		-o-appearance none
		-webkit-appearance none
		cursor pointer
		display block
		height 1.1em
		left 0
		outline none
		position absolute
		top 0
		width 1.1em

		&::before
		&::after
			box-sizing border-box
			content ''
			cursor pointer
			height 100%
			left 0
			position absolute
			top 0
			width 1.1em

	&__text
		display inline-block
		margin-left 2.2em
		width 100%

	/.check
		-moz-appearance none
		-ms-appearance none
		-o-appearance none
		-webkit-appearance none
		box-sizing border-box
		cursor pointer
		display block
		height 1.1em
		left 0
		outline none
		position absolute
		top 0
		width 1.1em

