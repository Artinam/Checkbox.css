@import 'normalize-v3.0.3-ROBOTO'
@import 'variables'

//ESTILOS DE LOS CONTENEDORES GENERALES
.chrome
.all-navigators
	width 80%
	margin 2em auto

//CONTENEDOR LISTA DE CHECKBOX
.list-of-checkbox
	background white
	border-radius .125em
	box-shadow z-depth-1 //Variable en shadows.styl
	display inline-block
	font-size 1.1rem //ESTE VALOR DEFINE EL TAMAÃ‘O DE LOS ELEMENTOS
	height auto
	list-style-type none
	margin .5em
	padding .25em
	width 8em //ESTE VALOR DEFINE EL ANCHO DE LOS ELEMENTOS INTERIORES

	&__item
		margin .25em 0
		padding .25em 4%
		width 92%

//PROPIEDADES DE LABELS Y CHECKBOX
.label
	color secondary-text-color //Variable en shadows.styl
	cursor pointer
	display block
	font-weight 400
	height 1.2em
	position relative
	width 100%

	&__check //DEFINE LAS PROPIEDADES DE POSICIONAMIENTO, ALTO Y ANCHO DE TODOS LOS CHECKBOX
		-moz-appearance none
		-ms-appearance none
		-o-appearance none
		-webkit-appearance none
		cursor pointer
		display block
		height 1.1em
		left 0
		outline none
		position absolute
		top 0
		width 1.1em

		&::before
		&::after
			box-sizing border-box
			content ''
			cursor pointer
			height 100%
			left 0
			position absolute
			top 0
			width 1.1em

	&__text
		display inline-block
		margin-left 2.2em
		width 100%

	/.check
		-moz-appearance none
		-ms-appearance none
		-o-appearance none
		-webkit-appearance none
		box-sizing border-box
		cursor pointer
		display block
		height 1.1em
		left 0
		outline none
		position absolute
		top 0
		width 1.1em

//IMPORTS DE LOS ESTILOS DE CADA TIPO DE CHECKBOX
@import 'check-A'
@import 'check-B'
@import 'check-C'
@import 'check-D'
@import './all-navigators/check-AA'
