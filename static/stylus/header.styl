//BLOQUE HEADER
.header
    background dark-primary-color
    display block
    height 80px
    margin 0 0 5em 0
    padding 0
    position relative
    text-align center
    width 100%

.logo
    display inline-block
    height 132px
    width 132px
    margin 1em 0 0 0
    padding 0
    position relative

    &__image
        margin 0
        max-width 100%
        padding 0
        position relative
        z-index 2

    &__shadow
        background rgba(white, 0)
        border-radius 50%
        box-shadow z-depth-3
        color white
        font-size 0rem
        height 82%
        left 9%
        position absolute
        top 9%
        width 82%
        z-index 1

    /.nav
        background accent-color
        box-shadow z-depth-1
        font-size 1.3rem
        font-weight 100
        height 32px
        position absolute
        text-align center
        top 80px
        width 100%

        &__item
            color white
            cursor pointer
            display inline-block
            line-height 32px
            padding 0 .5em
            position relative
            text-align center
            text-decoration none
            width 170px

            // &:nth-child(1)::before
            //     content 'a'

            &:nth-child(2)
                color checked-color
                opacity 0
                width 100px

@media screen and (max-width: 520px)
    .nav__item
        font-size 1.1rem
        padding 0
        text-align center
        width 35%

        &:nth-child(2)
            width 20%

@media screen and (max-width: 480px)
    .header
        height 100px

    .logo
        margin-top -.1em

        &__shadow
            box-shadow z-depth-2

    .nav
        height 3em
        top 100px

        &__item
            margin-top 1.7em

            &:nth-child(1)
                padding-left .5em
                text-align right

            &:nth-child(2)
                width 10%

            &:nth-child(3)
                padding-right .5em
                text-align left
