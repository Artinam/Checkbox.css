/**
 * ESTILOS PARA INPUT DE TIPO CHECKBOX
 *
 * CONTENIDO
 * ==========================================================
 * check-C......................Estilos del check animado C.
 *        check-C__background...Fondo del check animado.
 *        check-C__checkbox.....Símbolo animado del checkbox.
 *
 */

/*------------------------------------*\
    CHECK-C
\*------------------------------------*/
.check-C
    &__background //fondo '☐' cuando .custom-check__checkbox esta desmarcado
        background-color unchecked-color //Var en shadows.styl
        border-radius .125em
        opacity 1
        transition all .2s ease-in-out

    &:checked + .check-C__background //fondo '☐' cuando .custom-check__checkbox esta marcado
        animation bouncing-item .5s ease-in-out 0s 1 normal forwards
        background-color checked-color //Var en shadows.styl
        box-shadow z-depth-1 //Var en shadows.styl

    &__checkbox //símbolo '✔' cuando .custom-check__checkbox esta desmarcado
        border solid .125em white
        border-radius 0
        border-right none
        border-top none
        height 0.31em //28.18% de 1.1em
        left 0.275em //25% de 1.1em
        top 0.35em //31.81% de 1.1em
        transform rotate(-45deg)
        width 0.6em //54% de 1.1em

    &:checked + .check-C__background + .check-C__checkbox
        box-shadow -1px 1px 1px rgba(black, .1)
