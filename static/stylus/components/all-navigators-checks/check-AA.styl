/**
 * CONTENIDO
 *
 * BLOQUES
 * check-A.......Bloque check-A
		  check-A__background: Fondo de los checks.
		  check-A__checkbox: Checkbox animado creado con css.
 *
 */

/*------------------------------------*\
    CHECK-A
\*------------------------------------*/
.check-A
	&__background //recuadro ☐  que tapa el input de tipo checkbox cuando el input esta desmarcado
		background-color white
		opacity 1

	&__checkbox //checkbox animado ✔ cuando el input esta desmarcado
		opacity 1
		border solid .125em unchecked-color //Var en shadows.styl
		transition all .3s ease-in-out

	&:checked + .check-A__background + .check-A__checkbox //checkbox animado ✔ cuando el input esta marcado
		border-color checked-color //Var en shadows.styl
		border-right none
		border-top none
		height 0.55em //50% de 1.1em
		transform rotate(-45deg)
		width 0.99em //90% de 1.1em
