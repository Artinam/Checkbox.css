/**
 * CONTENIDO
 *
 * BLOQUES
 * check-C.......Bloque check-C
		  check-C__background: Fondo de los checks.
		  check-C__checkbox: Checkbox animado creado con css.
 *
 */

/*------------------------------------*\
    CHECK-C
\*------------------------------------*/
.check-C
	&__background //recuadro ☐  que tapa el input de tipo checkbox cuando el input esta desmarcado
		background-color unchecked-color //Var en shadows.styl
		border-radius .125em
		opacity 1
		transition background-color .3s ease-in-out

	&:checked + .check-C__background //recuadro ☐  que tapa el input de tipo checkbox cuando el input esta marcado
		background-color checked-color //Var en shadows.styl
		box-shadow z-depth-1 //Var en shadows.styl

	&__checkbox //checkbox animado ✔ cuando el input esta desmarcado
		border solid .125em white
		border-right none
		border-top none
		height 0.264em //24% de 1.1em
		left 0.264em //24% de 1.1em
		opacity 1
		top 0.396em //36% de 1.1em
		transform rotate(-45deg)
		transition all .1s ease-in-out .3s
		width 0.572em //52% de 1.1em
